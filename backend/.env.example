# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bigfin?schema=public

# Redis (optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Moov (Payment Provider)
MOOV_ACCOUNT_ID=your-moov-account-id
MOOV_PUBLIC_KEY=your-moov-public-key
MOOV_SECRET_KEY=your-moov-secret-key
MOOV_ENVIRONMENT=sandbox

# Storage (S3-compatible, optional)
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_BUCKET=bigfin-documents
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:19006
